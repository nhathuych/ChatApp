<div class="form-group msg-form">
  <%= form_with(model: [@current_room, @message], remote: true, class: "d-flex") do |f| %>
    <%= f.text_field :body, id: 'chat-text', placeholder: 'Enter your message...', class: 'form-control msg-content', autocomplete: 'off' %>
    <%= f.submit "Send", data: { disable_with: false }, class: 'btn btn-primary' %>
  <% end %>
</div>
